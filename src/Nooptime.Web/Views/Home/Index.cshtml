@{
    ViewData["Title"] = "Home Page";
}


<div class="row" style="margin-top: 40px;">
    <div class="col-xs-12" id="checks" v-if="items.length">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="(index, item) in items" v-bind:index="index" v-bind:key="item.Id">
                    <td>{{item.name}}</td>
                    <td>{{item.description}}</td>
                    <td><input class="btn btn-danger" type="button" v-on:click="remove(item, index)" value="Remove" /> <input class="btn btn-info" type="button" v-on:click="edit(item, index)" value="Edit" /></td>
                </tr>
            </tbody>

        </table>

    </div>
    <div class="row-xs-12">
        <p>Add an item</p>
        <form class="form form-inline">
            <div class="form-group">
                <input type="text" id="name" placeholder="Name" class="form-control" required />
                <input type="text" id="description" placeholder="Description" class="form-control" required />
                <input type="time" id="interval" placeholder="Interval" class="form-control" required />

                <button @@click="add" type="submit" class="btn btn-primary">add</button>
            </div>
        </form>
    </div>
    <div class="row-xs-12 hidden">
        <p>Edit item</p>
        <form class="form form-inline">
            <div class="form-group">
                <input type="text" id="name" placeholder="Name" class="form-control" required />
                <input type="text" id="description" placeholder="Description" class="form-control" required />
                <input type="time" id="interval" placeholder="Interval" class="form-control" required />

                <button @@click="add" type="button" class="btn btn-primary">add</button>
            </div>
        </form>
    </div>
</div>